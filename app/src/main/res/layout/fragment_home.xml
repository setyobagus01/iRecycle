<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:padding="16dp">

    <TextView
        android:id="@+id/textView"
        style="@style/Theme.3RWaste.Heading1"
        android:layout_width="@dimen/min_width_for_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/distance_between_content"
        android:text="@string/heading_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="364dp"
        android:layout_height="152dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/ic_card_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <TextView
            android:id="@+id/total_scanned_title"
            style="@style/Theme.3RWaste.Headline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:text="Total Item Scanned" />

        <TextView
            android:id="@+id/total_scanned_description"
            style="@style/Theme.3RWaste.TextView"
            android:layout_width="@dimen/min_width_for_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/total_scanned_title"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:text="@string/total_scanned_text" />

        <TextView
            android:layout_toEndOf="@id/total_scanned_description"
            style="@style/Theme.3RWaste.Headline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_circle_shape"
            android:gravity="center_vertical"
            android:paddingStart="39dp"
            android:paddingEnd="39dp"
            android:layout_marginStart="@dimen/distance_between_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:text="30" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView3"
        style="@style/Theme.3RWaste.Headline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="@string/item_scanned"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvWasteCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:layout_editor_absoluteX="16dp"
        tools:listitem="@layout/waste_item" />


</androidx.constraintlayout.widget.ConstraintLayout>